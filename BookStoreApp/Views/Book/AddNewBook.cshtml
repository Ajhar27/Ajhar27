@model BookModel

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-1">
            <h2 class="display-5">Add New Book</h2>
            <hr />
            @if (ViewBag.IsDone == true)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Hey Congratulations....!!!</strong> You should Added Book Successfully
                    Click <a asp-controller="Book" asp-action="GetBook" asp-route-id="@ViewBag.BookId">here</a> to see details
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @*Loader for waiting on submit*@
            @*<div class="text-center">
            <div class="spinner-border" role="status" id="MyLoader" style="display:none">
