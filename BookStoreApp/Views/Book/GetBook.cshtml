
@model BookModel


<div class="container">
    <h1 class="display-4">Book Details</h1>
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/Book1.jpg" class="d-block w-100 img" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Book2.jpg" class="d-block w-100 img" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Book3.jpg" class="d-block w-100 img" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Title</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="form-label">By:</span>
                    <span class="font-monospace">@Model.Author</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 ">
                    <p class="tab-content">
                        @Model.property
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <button class="btn btn-outline-primary">
                        Read More
                    </button>
                </div>
            </div>
            <hr/>
            <ul class="list-group">
                <li class="list-group-item"><span class=" point">Category -</span> @Model.category </li>
                <li class="list-group-item"><span class="point">Total Pages -</span>@Model.totalpage</li>
                <li class="list-group-item"><span class="point">Language -</span>@Model.Language </li>
            </ul>
        </div>
    </div>

    <hr/>
    <div class="py-5 bg-light">
        <div class="container">
            <h2>Similer Books</h2>
