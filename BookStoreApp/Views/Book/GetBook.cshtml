
@model BookModel


<div class="container">
    <h1 class="display-4">Book Details</h1>
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    @for (int i = 0; i < Model.Gallary.Count(); i++)
                    {
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i==0 ?"active" : "")"></button>
                    }

                </div>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Gallary.Count(); i++)
                    {
                        <div class="@(i==0 ? "carousel-item active" : "carousel-item")">
                            <img src="@Model.Gallary[i].URL" class="d-block w-100 img" alt="@Model.Gallary[i].Name">
                        </div>
                    }

                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Title</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="form-label">By:</span>
                    <span class="font-monospace">@Model.Author</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 ">
                    <p class="tab-content">
                        @Model.Property
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <a class="btn btn-outline-primary" href="@Model.PDFURL" data-bs-toggle="modal" data-bs-target="#exampleModal">Read More</a>
                </div>
            </div>
            <hr />
            <ul class="list-group">
                <li class="list-group-item"><span class=" point">Category -</span> @Model.Category </li>
                <li class="list-group-item"><span class="point">Total Pages -</span>@Model.Totalpage</li>
                <li class="list-group-item"><span class="point">Language -</span>@Model.Language </li>
            </ul>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
            <div class="modal-dialog  modal-lg modal-dialog-centered modal-dialog-scrollable ">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">@Model.Title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <embed src="@Model.PDFURL" class="w-100 model" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr/>
    <div class="py-5 bg-light">
