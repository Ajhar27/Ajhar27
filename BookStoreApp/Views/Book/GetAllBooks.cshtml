@model IEnumerable<BookStoreApp.Models.BookModel>



<div class="container">
    <h3 class="display-3">All Books</h3>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4 mt-2 ">
                <div class="card mb-4 shadow-sm" style="width: 18rem;">
                    <img src="@book.CoverImageURL" class="img-thumbnail"/>
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">@book.Property</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-route="bookDetailsRoute" asp-route-id="@book.Id" class="btn btn-primary">View</a>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>