                        <form class="d-flex">
                            <button class="btn btn-outline-primary me-4">Login</button>
                            <button class="btn btn-outline-danger">Register</button>
                        </form>
                    </div>
                </div>
            </nav>
        </header>
    </div>
    
    <main role="main">
        @RenderBody()
    </main>
    <div class="container">
        <footer class="border-top  card-footer footer text-muted text-lg-center  mt-2">

            <small>&copy; Copyright @DateTime.Now.Year Book Store. All Rights Reserved</small>
        </footer>
    </div>
    <script src="~/lib/jquery/jquery.js"></script>
    
</body>
</html>
